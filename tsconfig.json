{
  "compilerOptions": {
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "module": "esnext", // 编译出的代码采用的模块规范
    "target": "es6", // 编译出的代码采用 ES 的哪个版本
    "sourceMap": true, // 输出 Source Map 方便调试
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": [ // 不编译这些目录里的文件
    "node_modules"
  ]
}